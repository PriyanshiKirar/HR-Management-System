<%- include('../partials/Header.ejs') %>

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl sm:text-4xl font-bold mb-4 text-center">Employee Details</h1>
    <div class="bg-white shadow-md rounded px-4 sm:px-8 pt-6 pb-8 mb-4">
        <div class="mb-4">
            <strong class="block text-gray-700 text-sm font-bold mb-2">Name:</strong>
            <p class="text-gray-800 text-base">
                <%= employee.name %>
            </p>
        </div>
        <div class="mb-4">
            <strong class="block text-gray-700 text-sm font-bold mb-2">Email:</strong>
            <p class="text-gray-800 text-base">
                <%= employee.email %>
            </p>
        </div>
        <div class="mb-4">
            <strong class="block text-gray-700 text-sm font-bold mb-2">Phone:</strong>
            <p class="text-gray-800 text-base">
                <%= employee.phone %>
            </p>
        </div>
        <div class="mb-4">
            <strong class="block text-gray-700 text-sm font-bold mb-2">Job Role:</strong>
            <p class="text-gray-800 text-base">
                <%= employee.jobRole %>
            </p>
        </div>
        <div class="mb-4">
            <strong class="block text-gray-700 text-sm font-bold mb-2">Salary:</strong>
            <p class="text-gray-800 text-base">
                $<%= employee.salary.toFixed(2) %>
            </p>
        </div>
        <div class="mb-4">
            <strong class="block text-gray-700 text-sm font-bold mb-2">Hire Date:</strong>
            <p class="text-gray-800 text-base">
                <%= employee.hireDate.toLocaleDateString() %>
            </p>
        </div>
        <div class="flex flex-col sm:flex-row items-center justify-between">
            <a href="/employees/<%= employee._id %>/edit"
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Edit Employee
            </a>
            <form action="/employees/<%= employee._id %>?_method=DELETE" method="POST"
                onsubmit="return confirm('Are you sure you want to delete this employee?');">
                <button type="submit"
                    class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Delete Employee
                </button>
            </form>
        </div>
    </div>
</div>
